@model List<Book>
@{
    ViewData["Title"] = "Books";
}

<div class="text-center">
    <h1 class="display-4">List of Books</h1>

    <ul>
        @foreach (Book book in Model)
        {
            <li>
                <p>@book.Title</p>
                <p>@book.Author</p>
                <img src=@book.ImageUrl width ="200"/>
            </li>
            
        }
    </ul>
    
</div>