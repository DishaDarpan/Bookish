@model Book
@{
    ViewData["Title"] = "Add Book";
}

<div class="text-center">
    <h1 class="display-4">Add Book</h1>
    <form asp-controller="Books" asp-action="Create" method="post">
        <label>
            Title
            <input asp-for="Title" type="text">
        </label>
        <label>
            Author
            <input asp-for="Author" type="text">
        </label>
        <label>
            Image URL
            <input asp-for="ImageUrl" type="text">
        </label>
        <input type="submit" value="Add Book">
    </form>
</div>
